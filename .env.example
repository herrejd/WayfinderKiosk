# =============================================================================
# Wayfinder Kiosk Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your values
# Do NOT commit .env to version control
# =============================================================================

# -----------------------------------------------------------------------------
# Atrius Wayfinder SDK Credentials
# -----------------------------------------------------------------------------
VITE_WAYFINDER_ACCOUNT_ID=YOUR_ACCOUNT_ID
VITE_WAYFINDER_VENUE_ID=YOUR_VENUE_ID

# -----------------------------------------------------------------------------
# Kiosk Pinned Location (You Are Here marker)
# -----------------------------------------------------------------------------
VITE_KIOSK_PIN_TITLE=You Are Here
VITE_KIOSK_LATITUDE=0.0
VITE_KIOSK_LONGITUDE=0.0
VITE_KIOSK_FLOOR_ID=your-venue-floor-id
VITE_KIOSK_STRUCTURE_ID=your-venue-structure-id

# -----------------------------------------------------------------------------
# QR Code Map Link Configuration
# Base URL for "Take Map With You" QR code feature
# The map state ID will be appended as ?s={stateId}
# -----------------------------------------------------------------------------
VITE_MAP_QR_BASE_URL=https://your-venue.maps.atrius.com/

# -----------------------------------------------------------------------------
# Flight Status Integration (Optional)
# Requires additional API integration - contact your Atrius account manager
# Set to "true" to enable flight status features
# -----------------------------------------------------------------------------
VITE_FLIGHT_STATUS_ENABLED=false
VITE_FLIGHT_STATUS_API_KEY=

# -----------------------------------------------------------------------------
# POI Categories (Quick Actions)
# JSON object with language-keyed arrays for map home view quick actions
# Keys: poiCategories (English/default), poiCategories-es, poiCategories-fr
# Each array item can have: name, category, svgId, searchTerm
# All language variants are loaded at map initialization
# -----------------------------------------------------------------------------
VITE_POI_CATEGORIES={"poiCategories":[{"name":"Flight Info","category":"gate.departures"},{"name":"Restaurants","category":"eat"},{"name":"Shop","category":"shop"},{"name":"Relax","category":"relax"},{"name":"Airlines","category":"checkin"},{"svgId":"parking","name":"Parking","searchTerm":"parking"},{"name":"Restrooms","category":"restroom"}],"poiCategories-es":[{"name":"Info de Vuelos","category":"gate.departures"},{"name":"Restaurantes","category":"eat"},{"name":"Tiendas","category":"shop"},{"name":"Relajarse","category":"relax"},{"name":"Aerolíneas","category":"checkin"},{"svgId":"parking","name":"Estacionamiento","searchTerm":"parking"},{"name":"Baños","category":"restroom"}],"poiCategories-fr":[{"name":"Infos Vols","category":"gate.departures"},{"name":"Restaurants","category":"eat"},{"name":"Boutiques","category":"shop"},{"name":"Détente","category":"relax"},{"name":"Compagnies Aériennes","category":"checkin"},{"svgId":"parking","name":"Stationnement","searchTerm":"parking"},{"name":"Toilettes","category":"restroom"}]}

# -----------------------------------------------------------------------------
# Inactivity Timeout (milliseconds)
# Time before kiosk resets to idle screen
# Default: 60000 (1 minute)
# -----------------------------------------------------------------------------
VITE_INACTIVITY_TIMEOUT=60000

# -----------------------------------------------------------------------------
# Application Name
# Displayed in the SDK configuration
# -----------------------------------------------------------------------------
VITE_APP_NAME=Atrius Airport
